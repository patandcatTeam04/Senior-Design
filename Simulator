//this program simulates contractions
//it produces contractions with duration 30-120 secs at varying frequencies
//45-90 secs. duration
//50-90 secs. time b/n ea. (freq)
//set randomly generated duration and frequency numbers & times as integers:
int randNumber_dur;
int randNumber_freq;
int randNumber_dur_time;
int randNumber_freq_time;

void setup() {
// put your setup code here, to run once:
  Serial.begin(9600); //setup serial monitor
  randomSeed(analogRead(0)); //initializes the random number generator
}

void loop() {
  // run the following continuously
  randNumber_dur = random(30,120); //generate random number from 30 to 120
  Serial.println("dur = ");  Serial.print(randNumber_dur);
  Serial.println("LED ON"); 
  randNumber_dur_time = randNumber_dur * 1000;
  delay(randNumber_dur_time);
       if (randNumber_dur < 30 || randNumber_dur > 120) {
         Serial.println("dur danger! = "); Serial.print(randNumber_freq); 
    }
  Serial.println("LED OFF");
  randNumber_freq = random(50,90); //generate random number from 50 to 90; under 60 is dangerous
  randNumber_freq_time = randNumber_freq * 1000;
   Serial.println("freq = "); Serial.print(randNumber_freq); 
   delay(randNumber_freq_time);
   //if the contraction is outside the safe physiological range, display SOMETHING
   //so we know if our device pickedup on it and alerted the user
     if (randNumber_freq < 50 || randNumber_freq > 90) {
         Serial.println("freq danger! = "); Serial.print(randNumber_freq); 
    }


}
